<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.shadowsoft.visitor.outlet_more"
    tools:showIn="@layout/app_bar_outlet_more">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_dest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/loadingph"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/o_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25sp"
                    android:layout_marginTop="25sp"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tag_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25sp"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_contact_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25sp"
                    android:drawableLeft="@drawable/ic_phone_white_24dp"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:onClick="launch_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="15sp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_place_custom_48dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_margin="10sp"
                    />
                <TextView
                    android:id="@+id/o_add"
                    android:layout_marginBottom="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_marginTop="15sp"
                    android:textColor="@color/colorPrimary"
                    />

            </LinearLayout>
            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="400sp"
                android:layout_weight="1"
                tools:context="in.shadowsoft.visitor.MapsActivity" />

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="20sp"
                app:cardBackgroundColor="#ffffff"
                card_view:cardElevation="20dp" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="5sp"
                        android:layout_marginRight="20sp"
                        android:layout_marginTop="20sp"
                        android:layout_marginLeft="20sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_account_circle_custom_48dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:layout_margin="10sp"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="15sp"
                                android:layout_marginBottom="15sp"
                                android:layout_marginRight="15sp"
                                android:layout_weight="3">
                                <TextView
                                    android:id="@+id/f_title"
                                    android:layout_marginBottom="5sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimary"
                                    android:text="Prafful Lachhwani" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="#000000"
                                    android:text="I had visited this beautiful historical place in Tezpur last week with my family members. One of the beautiful place in assam or northeast. The view of mighty Brahmaputra from the view tower is just amazing. I had click some photos there. You will not be disappointed visiting here. Must visit place, I recommend you this place."/>
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="20sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_account_circle_custom_48dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:layout_margin="10sp"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="15sp"
                                android:layout_marginBottom="15sp"
                                android:layout_marginRight="15sp"
                                android:layout_weight="3">
                                <TextView
                                    android:id="@+id/f_title1"
                                    android:layout_marginBottom="5sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimary"
                                    android:text="Mohit Chauhan" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="#000000"
                                    android:text="Agnigarh hill is a tourist spot as name suggests it is a historic place. This is ticketed place and Brick paved steps are made to climb up to top of hill. Beautiful green view can be observed. As described in the information you will not find in real any historical or Archaeological items. There is tea shop on top but apart from that you will not find anything."/>
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Load More"
                        android:background="@color/colorPrimary"
                        android:textColor="#ffffff"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="50sp"
                app:cardBackgroundColor="#ffffff"
                card_view:cardElevation="20dp" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15sp"
                        android:layout_marginLeft="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Tell us your experience"
                        android:textColor="#000000"
                        android:textStyle="bold"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="20sp">

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:progressTint="#616161"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:text="Name"
                            android:textColor="#000000"/>

                        <EditText
                            android:backgroundTint="@color/colorPrimary"
                            android:id="@+id/et_title"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Title here"
                            android:paddingBottom="20dp"/>
                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:text="Your Feedback"
                            android:textColor="#000000"/>

                        <EditText
                            android:backgroundTint="@color/colorPrimary"
                            android:id="@+id/et_feedback"
                            android:paddingBottom="20dp"
                            android:maxLines="4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Feedback here"/>


                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:background="@color/colorPrimary"
                        android:textColor="#ffffff"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
